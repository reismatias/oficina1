<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>
    <%= title %> - Projeto de Oficina
  </title>
  <link rel="stylesheet" href="/css/style.css">
  <%- extraHead %>
</head>

<body class="dashboard-layout">
  <aside id="sidebar" class="sidebar">
    <div class="brand">
      <div class="logo" aria-hidden></div>
      <div class="label">Projeto de Oficina</div>
    </div>
    <nav class="nav">
      <a href="/dashboard" class="<%= page === 'dashboard' ? 'active' : '' %>"><span class="icon">üè†</span><span
          class="label">Dashboard</span></a>
      <a href="/devices" class="<%= page === 'devices' ? 'active' : '' %>"><span class="icon">‚öôÔ∏è</span><span
          class="label">Gerenciar Devices</span></a>
    </nav>
    <div style="flex:1"></div>

    <div class="footer">
      <div class="user" id="userFooter">
        <button id="userMenuBtn" class="user-btn" aria-haspopup="true" aria-expanded="false">
          <div class="avatar" id="avatar">U</div>
          <div class="name" id="username">Usu√°rio</div>
        </button>
        <div id="userMenu" class="user-menu" hidden>
          <button id="changePassword" class="btn">Trocar senha</button>
        </div>
      </div>
    </div>
  </aside>

  <main class="main">
    <div class="topbar">
      <div class="left-controls" style="display:flex;align-items:center;gap:12px">
        <button id="toggleSidebar" class="btn" title="Fechar barra lateral">‚ò∞</button>
        <div class="title">
          <%= title %>
        </div>
      </div>
      <div class="controls">
        <div id="statusBadge" style="font-size:13px;opacity:.8">Conectado</div>
        <button id="logoutBtn" class="btn">Logout</button>
      </div>
    </div>

    <div class="content" <% if (typeof contentStyle !=='undefined' && contentStyle) { %> style="<%= contentStyle %>"<% }
          %>>
          <%- body %>
    </div>
  </main>

  <!-- Custom Modal -->
  <div id="customModal" class="modal-overlay">
    <div class="modal-dialog">
      <h3 id="modalTitle" class="modal-title"></h3>
      <p id="modalMessage" class="modal-message"></p>
      <input id="modalInput" class="modal-input" type="text" style="display:none">
      <div class="modal-actions">
        <button id="modalCancel" class="btn">Cancelar</button>
        <button id="modalConfirm" class="btn btn-success">Confirmar</button>
      </div>
    </div>
  </div>

  <script src="/js/layout.js"></script>
  <%- extraScripts %>
</body>

</html>